<style>
  @import url(https://fonts.googleapis.com/css?family=Raleway:700,800);

html, body { margin: 0; }

:focus { outline: none; }
::-webkit-input-placeholder { color: #DEDFDF; }
::-moz-placeholder { color: #DEDFDF; }
:-moz-placeholder { color: #DEDFDF; }
::-ms-input-placeholder { color: #DEDFDF; }

body {

  background: # #FFFFFF;

  background-size: 100%;

  color: #000000;
  font-family: 'Raleway', sans-serif;
  -webkit-font-smoothing: antialiased;
}

.form-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 0vh; /* vh stands for viewport height */
}
form {
  width: 320px;
  height: flex;
  position: relative;
  box-shadow: 0 10px 15px rgba(179, 179, 179, 1.3);
  padding: 1rem;
}

input[type=radio] { display: none; }

label {
  cursor: pointer;
  display: inline-block;
  font-size: 22px;
  font-weight: 800;
<%#   opacity: .5; %>
  margin-bottom: 3px;
  text-transform: uppercase;
}
label:hover {
  transition: all .3s cubic-bezier(.6,0,.4,1);
  opacity: 1;
}

input[type=text],
input[type=email],
input[type=password] {
  background: #fff;
  border: 1px solid;
  border-radius: 4px;
  font-size: 27px;
  font-family: 'Raleway', sans-serif;
  height: 50px;
  width: 99.5%;
  margin-bottom: 10px;
  opacity: 1;
  text-indent: 20px;
  transition: all .2s ease-in-out;
  placeholder:#53625E;
}

input[type=submit] {
  background: #079BCF;
  border: none;
  border-radius: 8px;
  color: #fff;
  cursor: pointer;
  font-family: 'Raleway', sans-serif;
  font-size: 27px;
  height: 50px;
  width: 100%;
  margin-bottom: 10px;
  overflow: hidden;
  transition: all .3s cubic-bezier(.6,0,.4,1);
}
input span {
  display: block;
  line-height: 72px;
  position: relative;
  top: -2px;
  transform: translate3d(0,0,0);
}
input:hover {
  background: #007BA5;
}

welcome-image{
  position: relative;
  left: 25%;
  top: 35%;
}
</style>


<div class="form-container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


    <div class="welcome-image">
      <%=image_tag("Linkedin-logo.jpg",size: "106x54")%>
    </div>

    <h2>Sign in</h2>

    <p>Stay update on your professional world</p>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email"  %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    </div>

    <br>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
    <% end %>

    <br>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
    <p>
      New to Linkedin?
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Join now", new_registration_path(resource_name) %><br />
      <% end %>
    </p>

    <p>------------------------------or-----------------------------</p>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
      <% end %>
    <% end %>


  <% end %>
</div>


