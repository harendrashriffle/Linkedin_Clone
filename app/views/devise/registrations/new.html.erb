<style>
  @import url(https://fonts.googleapis.com/css?family=Raleway:700,800);

html, body { margin: 0; }

:focus { outline: none; }
::-webkit-input-placeholder { color: #DEDFDF; }
::-moz-placeholder { color: #DEDFDF; }
:-moz-placeholder { color: #DEDFDF; }
::-ms-input-placeholder { color: #DEDFDF; }

body {

  background: #FFFFFF;

  background-size: 100%;

  color: #000000;
  font-family: 'Raleway', sans-serif;
  -webkit-font-smoothing: antialiased;
}

.form-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 0vh; /* vh stands for viewport height */
}
form {
  width: flex;
  height: flex;
  position: relative;
  box-shadow: 0 10px 15px rgba(179, 179, 179, 1.3);
  padding: 1rem;
}

input[type=radio] { display: none; }

label {
  cursor: pointer;
  display: inline-block;
<%#   font-size: 22px; %>
<%#   font-weight: 800; %>
<%#   opacity: .5; %>
<%#   margin-bottom: 3px; %>
<%#   text-transform: uppercase; %>
}
label:hover {
  transition: all .3s cubic-bezier(.6,0,.4,1);
  opacity: 1;
}

input[type=text],
input[type=email],
input[type=password] {
  background: #fff;
  border: 1px solid;
  border-radius: 4px;
<%#   font-size: 27px; %>
  font-family: 'Raleway', sans-serif;
<%#   height: 50px; %>
  width: 99.5%;
  margin-bottom: 10px;
  opacity: 1;
  text-indent: 20px;
  transition: all .2s ease-in-out;
  placeholder:#53625E;
}

input[type=submit] {
  background: #079BCF;
  border: none;
  border-radius: 24px;
  color: #fff;
  cursor: pointer;
  font-family: 'Raleway', sans-serif;
  font-size: 27px;
  height: 50px;
  width: 100%;
  margin-bottom: 10px;
  overflow: hidden;
  transition: all .3s cubic-bezier(.6,0,.4,1);
}
input span {
  display: block;
  line-height: 72px;
  position: relative;
  top: -2px;
  transform: translate3d(0,0,0);
}
input:hover {
  background: #007BA5;
}

welcome-image{
  position: absolute;
  left: 25%;
  top: 35%;
  min-height: 0vh; /* vh stands for viewport height */
}

.header{
    padding-left: 0px ;
    padding-right: 0px ;
    text-align: center ;
    padding-top: 24px ;
    padding-bottom: 24px ;
    font-size: 24px ;
}

.input-group {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
    width: 100%;
    column-gap: 10px;
}
</style>

<div class="welcome-image">
  <%=image_tag("Linkedin-logo.jpg",size: "106x54")%>
</div>


<h1 class="header"> Make the most of your professional life</h1>
<div class="form-container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%# <h2>Sign up</h2> %>

    <div class="input-group">

      <div class="field">
        <%= f.label :Name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Name" %>
      </div>

      <div class="field">
        <%= f.label :Email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",  placeholder:"E-mail" %>
      </div>

    </div>

    <div class="input-group">

      <div class="field">
        <%= f.label :"Password (6+ characters)" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password" %>
      </div>

      <div class="field">
        <%= f.label :Mobile %><br />
        <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile", placeholder:"Mobile" %>
      </div>

    </div>

    <div class="field">
      <%= f.label :Address %><br />
      <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder:"Address" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>

    <p>
      "Already on LinkedIn?"
      <%- if controller_name != 'sessions' %>
        <%= link_to "Sign in", new_session_path(resource_name) %><br />
      <% end %>
    </p>

  <% end %>
</div>
